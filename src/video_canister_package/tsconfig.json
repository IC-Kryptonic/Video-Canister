{
  "compilerOptions": {
    "outDir": "build",
    "lib": ["ES2021", "DOM"],
    "module": "commonjs",
    "target": "ES2021",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "declaration": true
  },
  "include": ["src"]
}
